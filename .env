# Tệp .env - Cấu hình hệ thống nhận dạng biển số xe
# Tệp này chứa các biến môi trường cấu hình hệ thống API

# ----- Cài đặt YOLO -----
# Đường dẫn đến model YOLO (để trống sẽ sử dụng best.pt trong thư mục hiện tại)
YOLO_MODEL_PATH=best.pt
# Ngưỡng tin cậy cho model YOLO
YOLO_CONF_THRESHOLD=0.4

# ----- Cài đặt OCR và tiền xử lý ảnh -----
# Bật/tắt tiền xử lý ảnh OCR
ENABLE_OCR_PREPROCESSING=true
# Thử nhiều phương pháp OCR cho mỗi ảnh
ENABLE_MULTIPLE_OCR_METHODS=true
# Số lượng tối đa các phiên bản xử lý ảnh
MAX_OCR_VERSIONS=5
# Ngưỡng tin cậy OCR
OCR_CONF_THRESHOLD=0.5
# Bật/tắt chỉnh sửa góc nghiêng
ENABLE_DESKEW=true

# Tham số CLAHE (Contrast Limited Adaptive Histogram Equalization)
OCR_CLAHE_CLIP_LIMIT=2.0
OCR_CLAHE_TILE_SIZE=8

# Tham số Adaptive Threshold
OCR_THRESH_BLOCK_SIZE=11
OCR_THRESH_C=5

# ----- Cài đặt PaddleOCR -----
# Ngôn ngữ OCR (en, ch, latin, etc.)
PADDLE_LANGUAGE=en
# Sử dụng GPU cho PaddleOCR
PADDLE_USE_GPU=true
# Bật tính năng phát hiện góc nghiêng chữ
PADDLE_USE_ANGLE_CLS=true

# ----- Cài đặt API server -----
API_HOST=0.0.0.0
API_PORT=5000
LOG_LEVEL=info 